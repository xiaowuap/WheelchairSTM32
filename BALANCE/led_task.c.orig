#include "led_task.h"

/**************************************************************************
Function: LED light flashing task
Input   : none
Output  : none
函数功能：LED灯闪烁任务
入口参数：无 
返回  值：无
**************************************************************************/
void led_task(void *pvParameters)
{
    while(1)
    {
		static u8 led_state=0;
		
		if( charger.AllowRecharge )
		{
			if( charger.Charging )  LED_SetColor(LED_Purple); 
			else LED_SetColor(LED_Yellow);
		}
		else
			LED_SetColor(LED_Red);
		
		//LED闪烁任务
		led_state = !led_state;
		LED_SetState(led_state);

      //The LED flicker task is very simple, requires low frequency accuracy, and uses the relative delay function	
      //LED闪烁任务非常简单，对频率精度要求低，使用相对延时函数			
      vTaskDelay(Led_Count); 
    }
}  


